// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Roles {
    ADMIN
    TENANT
    LANDLORD
}

enum PropertyStatus {
    OPEN
    CLOSED
}

model User {
    id         String    @unique @default(uuid())
    username   String    @unique
    email      String    @unique
    password   String
    isVerified Boolean
    role       Roles
    createdAt  DateTime  @default(now())
    updatedAt  DateTime  @updatedAt
    deletedAt  DateTime?
    lastLogin  DateTime?
}

model Property {
    id            String         @unique @default(uuid())
    userId        String
    price         Float
    location      String
    numberOfRooms String
    amenities     String[]
    description   String
    media         String[]
    status        PropertyStatus
    createdAt     DateTime       @default(now())
    updatedAt     DateTime       @updatedAt
    deletedAt     DateTime?
}
